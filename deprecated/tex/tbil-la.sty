\newcommand{\vectorSpaceProperties}{
\begin{multicols}{2}
\begin{itemize}
  \item \textbf{Addition is associative:} \(\vec u\oplus(\vec v\oplus\vec w)=
        (\vec u\oplus\vec v)\oplus\vec w\).
  \item \textbf{Addition is commutative:} \(\vec u\oplus\vec v=
        \vec v\oplus\vec u\).
  \item \textbf{Additive identity exists:} There exists some \(\vec z\)
        where \(\vec v\oplus\vec z=\vec v\).
  \item \textbf{Additive inverses exist:} There exists some \(-\vec v\)
        where \(\vec v\oplus(-\vec v)=\vec z\).
  \columnbreak
  \item \textbf{Scalar multiplication is associative:} \(a\odot(b\odot\vec v)=(ab)\odot\vec v\).
  \item \textbf{Scalar multiplication identity exists:} \(1\odot\vec v=\vec v\).
  \item \textbf{Scalar mult. distributes over vector addition:} \(a\odot(\vec u\oplus\vec v)=a\odot\vec u\oplus a\odot\vec v\).
  \item \textbf{Scalar mult. distributes over scalar addition:} \((a+ b)\odot\vec v=a\odot\vec v\oplus b\odot\vec v\).
\end{itemize}
\end{multicols}
}


